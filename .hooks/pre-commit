#!/bin/bash
set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo -e "${YELLOW}Running pre-commit checks...${NC}"

# Get list of staged PHP files
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep '\.php$' || true)

if [ -z "$STAGED_FILES" ]; then
    echo -e "${GREEN}No PHP files staged, skipping checks.${NC}"
    exit 0
fi

# 1. Syntax check
echo -e "\n${YELLOW}[1/5] Checking PHP syntax...${NC}"
for FILE in $STAGED_FILES; do
    if [ -f "$FILE" ]; then
        php -l "$FILE" > /dev/null 2>&1
        if [ $? -ne 0 ]; then
            echo -e "${RED}Syntax error in: $FILE${NC}"
            exit 1
        fi
    fi
done
echo -e "${GREEN}Syntax OK${NC}"

# 2. PHP-CS-Fixer (dry run)
echo -e "\n${YELLOW}[2/5] Checking code style...${NC}"
if [ -f "vendor/bin/php-cs-fixer" ]; then
    vendor/bin/php-cs-fixer fix --dry-run --diff --config=.php-cs-fixer.php $STAGED_FILES 2>/dev/null
    if [ $? -ne 0 ]; then
        echo -e "${RED}Code style issues found. Run: vendor/bin/php-cs-fixer fix${NC}"
        exit 1
    fi
    echo -e "${GREEN}Code style OK${NC}"
else
    echo -e "${YELLOW}PHP-CS-Fixer not installed, skipping...${NC}"
fi

# 3. PHPStan
echo -e "\n${YELLOW}[3/5] Running static analysis...${NC}"
if [ -f "vendor/bin/phpstan" ]; then
    vendor/bin/phpstan analyse --memory-limit=512M --no-progress $STAGED_FILES
    if [ $? -ne 0 ]; then
        echo -e "${RED}Static analysis failed${NC}"
        exit 1
    fi
    echo -e "${GREEN}Static analysis OK${NC}"
else
    echo -e "${YELLOW}PHPStan not installed, skipping...${NC}"
fi

# 4. Security checks
echo -e "\n${YELLOW}[4/5] Checking for security issues...${NC}"

# Check for dangerous functions
SECURITY_ISSUES=0

# unserialize without allowed_classes
if grep -rn 'unserialize\s*(' $STAGED_FILES 2>/dev/null | grep -v "allowed_classes"; then
    echo -e "${RED}Found unserialize() without allowed_classes restriction${NC}"
    SECURITY_ISSUES=1
fi

# eval
if grep -rn '\beval\s*(' $STAGED_FILES 2>/dev/null; then
    echo -e "${RED}Found eval() - this is almost always a security risk${NC}"
    SECURITY_ISSUES=1
fi

# shell_exec/exec/system without escaping
if grep -rn 'shell_exec\|passthru\|\bexec\s*(' $STAGED_FILES 2>/dev/null | grep -v escapeshellarg | grep -v escapeshellcmd; then
    echo -e "${YELLOW}Warning: Found shell execution - ensure proper escaping${NC}"
fi

# Debug code
if grep -rn '\bdd\s*(\|\bdump\s*(\|var_dump\s*(' $STAGED_FILES 2>/dev/null; then
    echo -e "${RED}Found debug code (dd, dump, var_dump)${NC}"
    SECURITY_ISSUES=1
fi

if [ $SECURITY_ISSUES -ne 0 ]; then
    echo -e "${RED}Security issues found, commit blocked${NC}"
    exit 1
fi
echo -e "${GREEN}Security checks OK${NC}"

# 5. Check for merge conflict markers
echo -e "\n${YELLOW}[5/5] Checking for merge conflicts...${NC}"
if grep -rn '<<<<<<< \|======= \|>>>>>>> ' $STAGED_FILES 2>/dev/null; then
    echo -e "${RED}Found merge conflict markers${NC}"
    exit 1
fi
echo -e "${GREEN}No merge conflicts${NC}"

echo -e "\n${GREEN}All pre-commit checks passed!${NC}"
exit 0
