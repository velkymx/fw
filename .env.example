# Application Configuration
APP_NAME="Fw Framework"
APP_ENV=local
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_SECURE_COOKIES=false

# Security Keys
# Generate with: php -r "echo bin2hex(random_bytes(32));"
APP_KEY=
QUEUE_SECRET_KEY=

# Cache Configuration
# Available drivers: auto (prefers apcu, then file), apcu, file, none
CACHE_DRIVER=auto

# Database Configuration
# Drivers: mysql, pgsql, sqlite
DB_ENABLED=true
DB_DRIVER=sqlite
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=storage/database.sqlite
DB_USERNAME=root
DB_PASSWORD=
DB_CHARSET=utf8mb4
DB_LOGGING=false
# Persistent connections (reuses across PHP-FPM workers)
# For production, consider ProxySQL/PgBouncer instead
DB_PERSISTENT=false

# API Authentication
# Token expiration in seconds (default: 30 days = 2592000)
# Set to 0 or empty for non-expiring tokens
API_TOKEN_EXPIRATION=2592000

# Token prefix (optional, helps identify token type)
API_TOKEN_PREFIX=

# Hash algorithm for token storage
API_HASH_ALGO=sha256

# Rate limits (requests per minute)
API_RATE_LIMIT_DEFAULT=60
API_RATE_LIMIT_STANDARD=120
API_RATE_LIMIT_PREMIUM=300

# SPA domains whitelist (comma-separated)
# Add your frontend domains here for cookie-based auth
API_SPA_DOMAINS=localhost,127.0.0.1

# Logging Configuration
LOG_ENABLED=true
LOG_LEVEL=debug
LOG_PATH=storage/logs
LOG_FILENAME=fw
